<script is:inline>
  const c_primary = localStorage.getItem('--c-primary');
if (c_primary !== null) {
  document.documentElement.style.setProperty('--c-primary', c_primary);
}
const c_font_color = localStorage.getItem('--c-font-color');
if (c_font_color !== null) {
  document.documentElement.style.setProperty('--c-font-color', c_font_color);
}
    // ☝️ This script prevent the FART effect.
    if (localStorage.getItem("theme") === null) {
      document.documentElement.setAttribute("data-theme", "dark");
    } else
    document.documentElement.setAttribute("data-theme",localStorage.getItem("theme"));
    // "theme" LocalStorage value is set by the package to remember user preference.
    // The value is checked and applyed before rendering anything.
</script>
